<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Design.PreviewWith>
        <Border Padding="20">
            <TextBlock Classes="TishkoLogo">Tishko</TextBlock>
        </Border>
    </Design.PreviewWith>
    
    <Style Selector="TextBlock.TishkoLogo">
        <Setter Property="Foreground" Value="White"></Setter>
        <Setter Property="FontFamily" Value="{StaticResource ExoBlack}"></Setter>
        <Setter Property="FontSize" Value="72"></Setter>
        <Setter Property="Margin" Value="20,10"></Setter>
    </Style>
</Styles>
