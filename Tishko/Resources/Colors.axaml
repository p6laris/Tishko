<ResourceDictionary xmlns="https://github.com/avaloniaui"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Monochrome anchors -->
    <Color x:Key="White">#FFFFFF</Color>
    <Color x:Key="Black">#000000</Color>

    <!-- Tailwind-style grayscale ramp -->
    <Color x:Key="Gray950">#0A0A0A</Color>
    <Color x:Key="Gray900">#111111</Color>
    <Color x:Key="Gray800">#1F1F1F</Color>
    <Color x:Key="Gray700">#2E2E2E</Color>
    <Color x:Key="Gray600">#515151</Color>
    <Color x:Key="Gray500">#737373</Color>
    <Color x:Key="Gray400">#A3A3A3</Color>
    <Color x:Key="Gray300">#D4D4D4</Color>
    <Color x:Key="Gray200">#E5E5E5</Color>

    <!-- Brushes from above -->
    <SolidColorBrush x:Key="Brush.White" Color="{DynamicResource White}" />
    <SolidColorBrush x:Key="Brush.Black" Color="{DynamicResource Black}" />
    <SolidColorBrush x:Key="Brush.Gray950" Color="{DynamicResource Gray950}" />
    <SolidColorBrush x:Key="Brush.Gray900" Color="{DynamicResource Gray900}" />
    <SolidColorBrush x:Key="Brush.Gray800" Color="{DynamicResource Gray800}" />
    <SolidColorBrush x:Key="Brush.Gray700" Color="{DynamicResource Gray700}" />
    <SolidColorBrush x:Key="Brush.Gray600" Color="{DynamicResource Gray600}" />
    <SolidColorBrush x:Key="Brush.Gray500" Color="{DynamicResource Gray500}" />
    <SolidColorBrush x:Key="Brush.Gray400" Color="{DynamicResource Gray400}" />
    <SolidColorBrush x:Key="Brush.Gray300" Color="{DynamicResource Gray300}" />
    <SolidColorBrush x:Key="Brush.Gray200" Color="{DynamicResource Gray200}" />

    <!-- Semantic aliases -->
    <SolidColorBrush x:Key="Bg.Window" Color="{DynamicResource Gray950}" />
    <SolidColorBrush x:Key="Bg.Surface" Color="{DynamicResource Gray900}" />
    <SolidColorBrush x:Key="Bg.Elevated" Color="{DynamicResource Gray800}" />
    <SolidColorBrush x:Key="Text.Primary" Color="{DynamicResource Brush.White}" />
    <SolidColorBrush x:Key="Text.Secondary" Color="{DynamicResource Gray400}" />
    <SolidColorBrush x:Key="Border.Hairline" Color="{DynamicResource Gray800}" />
    <SolidColorBrush x:Key="Border.Muted" Color="{DynamicResource Gray700}" />
    <SolidColorBrush x:Key="Accent" Color="{DynamicResource Brush.White}" /> <!-- still monochrome -->
</ResourceDictionary>
