<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Tishko.App"
             xmlns:local="using:Tishko"
             RequestedThemeVariant="Default">
    <Application.DataTemplates>
        <local:ViewLocator/>
    </Application.DataTemplates>
  <Application.Resources>
      <ResourceDictionary>
          <ResourceDictionary.MergedDictionaries>
              <MergeResourceInclude Source="Resources/Colors.axaml"></MergeResourceInclude>
              <MergeResourceInclude Source="Resources/Fonts.axaml"></MergeResourceInclude>
          </ResourceDictionary.MergedDictionaries>
      </ResourceDictionary>
  </Application.Resources>
    <Application.Styles>
        <FluentTheme/>        
        <Style Selector="Window">
            <Setter Property="Background" Value="Black"></Setter>
            <Setter Property="Foreground" Value="White"></Setter>
            <Setter Property="FontFamily" Value="{StaticResource Exo}"></Setter>
        </Style>
        <StyleInclude Source="Styles/AppDefaultStyles.axaml"></StyleInclude>
    </Application.Styles>
</Application>